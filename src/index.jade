html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  title Calculator App
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
  link(href='index.css', rel='stylesheet')
body
  .text-center
    h1 Calculator App
  .calcOutput
    #steps 0
  .text-center
    #calculator
    a.btn.btn-danger#deleteAll AC
    a.btn.btn-danger#backOne CE
    a.btn.btn-primary#divide /
    a.btn.btn-primary#multiply *
    br
    a.btn.btn-primary#7 7
    a.btn.btn-primary#8 8    
    a.btn.btn-primary#9 9
    a.btn.btn-primary#minus -
    br
    a.btn.btn-primary#4 4
    a.btn.btn-primary#5 5    
    a.btn.btn-primary#6 6
    a.btn.btn-primary#plus +
    br
    a.btn.btn-primary#1 1
    a.btn.btn-primary#2 2    
    a.btn.btn-primary#3 3
    a.btn.btn-primary#dot .
    br
    a.btn.btn-primary.bigButton#0 0
    a.btn.btn-primary.bigButton#equals =

  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js')
  script(type='text/javascript', src='index.js')